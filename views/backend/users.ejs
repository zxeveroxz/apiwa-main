<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title text-center" id="exampleModalLabel">Form Add Account Users</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <form id="myForm" action="/users/add-users" method="POST">
                <div class="form-group">
                <label for="exampleInputEmail1">Username</label>
                <input type="hidden" name="id" >
                <input type="text" class="form-control" name="username" placeholder="" required>
                </div>

                <div class="form-group">
                  <label for="exampleInputEmail1">Email</label>
                  <input type="email" class="form-control" name="email" placeholder="" required>
                </div>

                <div class="form-group" id="hiddenpass">
                    <label for="exampleInputEmail1">Password</label>
                    <input type="password" class="form-control" name="password" placeholder="" required>
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail1">Role</label>
                    <select class="form-control" name="role" required>
                        <option value="">Pilih</option>
                        <option value="admin">Admin</option>
                        <option value="user">User</option>
                    </select>
                </div>
            </form>
            <div class="form-group">
                <button type="button" id="btnSave" class="btn btn-primary">Save changes</button>
            </div>
        </div>
      </div>
    </div>
  </div>

<script src="https://code.jquery.com/jquery-3.5.1.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function() {
        $('#example').DataTable({
            processing: true,
            ajax: {
                'url':'/users/data-users',
                'type': 'GET'
            },
            columns: [
                {data: 'id', name: 'id'},
                {data: 'username', name: 'username'},
                {data: 'email', name: 'email'},
                {data: 'role', name: 'role'},
                {   
                    data: 'id',
                    render: function ( data, type, row ) {
                        return '<button onClick="Edit(this)" data-id="'+data+'" id="Edit" class="btn btn-warning">Edit</button>&nbsp;'+
                        '<button onClick="Reset(this)" data-id="'+data+'" id="Edit" class="btn btn-primary">Reset Password</button>&nbsp;'+
                        '<button onClick="Hapus(this)" data-id="'+data+'" class="btn btn-danger">Hapus</button>';
                    },
                    searchable:false,
                    orderable:false
                }
            ]
        });
        
    });


    function reloadTable() {
        $("#example").DataTable().ajax.reload(null,false);
    }
    $('#btnAdd').click(function () {
        $('#myForm')[0].reset();
        $('#myModal').modal('show');
        $('#hiddenpass').show();
        $('#myForm').attr('action',"");
        $('#myModal').find('.modal-title').text('Tambah Data');
        $('#btnSave').html('<i class="fa fa-save"></i>&nbsp;Simpan');
        $('#myForm').attr('action',"/users/add-users");
    });

    $('#btnSave').click(function () {
        var url = $('#myForm').attr('action');
        var data = new FormData($('#myForm')[0]);
        $('#btnSave').html('<i class="fa fa-save"></i>&nbsp; Simpan <img width="30" heigth="30" src="">').attr('disabled', 'disabled');
        $.ajax({
            type : 'ajax',
            method: 'POST',
            url  : url,
            data : data,
            async: false,
            cache: false,
            contentType:false,
            processData:false,
            dataType :'json',
            success : function(response){
                reloadTable();
                $('#btnSave').prop('disabled', false);
                $('#myModal').modal('hide');
                if(response.status==200){
                    Swal.fire('Success!','Succes Input Data.','success');
                }else{
                    Swal.fire('Warning!',response.data[0].message,'warning');
                }
            },
            error: function(){
                $('#btnSave').prop('disabled', false);
                $('#myModal').modal('hide');
                Swal.fire('Failed!','Failed Input Data.','error');
            }
        });
    });
    function Edit(id){
        $('#btnSave').html('Update');
        $('#myModal').modal('show');
        $('#myForm').attr('action',"");
        $('#myModal').find('.modal-title').text('Ubah Data');
        $('#myForm').attr('action',"/users/update-users");
        var id = $(id).data("id");
        $.ajax({
            type : 'ajax',
            method :'get',
            url  :'/users/edit-users/'+id+'',
            async: false,
            dataType :'json',
            success : function(response){
                $('input[name=id]').val(response.data[0].id);
                $('input[name=username]').val(response.data[0].username);
                $('input[name=email]').val(response.data[0].email);
                $('select[name=role]').val(response.data[0].role);
                $('#hiddenpass').hide();
            }
        });
    }
    function Hapus(id){
        var id = $(id).data("id");
        Swal.fire({
        title: 'Are you sure?',
        text: "You won't be able to revert this!",
        type: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    type : 'ajax',
                    method :'get',
                    url  :'/users/delete-users/'+id+'',
                    async: false,
                    dataType :'json',
                    success : function(response){
                        reloadTable();
                        Swal.fire(
                        'Deleted!',
                        'Your file has been deleted.',
                        'success'
                        )
                    }
                });
            }
        })    
    }

    function Reset(id){
        var id = $(id).data("id");
        Swal.fire({
        title: 'Are you sure?',
        text: "You won't reset password!",
        type: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    type : 'ajax',
                    method :'get',
                    url  :'/users/reset-password/'+id+'',
                    async: false,
                    dataType :'json',
                    success : function(response){
                        reloadTable();
                        Swal.fire(
                        'Success!',
                        'Success Reset Password, Password Default 123456.',
                        'success'
                        )
                    }
                });
            }
        })  
    }


</script>